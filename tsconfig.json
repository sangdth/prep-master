{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": [
    "dist",
    ".next",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "babel.config.js"
  ]
}
